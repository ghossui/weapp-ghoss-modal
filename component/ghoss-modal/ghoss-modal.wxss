.modal-box, .modal-mask {
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
}

.modal-box {
	position: fixed;
	z-index: 9999999;
	display: flex;
	justify-content: center;
	align-items: center;
}

.modal-mask {
	position: absolute;
	z-index: 999;
	background-color: rgba(0, 0, 0, 0.5);
}

.modal-body {
	position: relative;
	z-index: 1000;
	width: 80%;
	max-height: 80%;
	transition: all 0.5s;
}

.modal-show .modal-body {
	animation: modal-show 400ms;
}

@keyframes modal-show {
	0% {
		transform: scale(0.1, 0.1);
	}
	75% {
		transform: scale(1.1, 1.1);
	}
	100% {
		transform: scale(1, 1);
	}
}

.modal-hide .modal-body {
	animation: modal-hide 400ms;
}

@keyframes modal-hide {
	0% {
		transform: scale(1, 1);
	}
	25% {
		transform: scale(1.1, 1.1);
	}
	100% {
		transform: scale(0.1, 0.1);
	}
}

/* header */

.body-header {
	padding: 20rpx 20rpx;
	border-bottom: 1px solid #f5f5f5;
}

/* content */

.body-content {
	padding: 20rpx 20rpx;
}

.body-content .scroll {
	max-height: 70vh;
	font-size: 32rpx;
	color: #666;
	position: relative;
}

/* buttons */

.body-btns {
	height: 100%;
	display: flex;
	align-items: center;
	box-sizing: border-box;
	justify-content: space-between;
}

.body-btns .btn {
	flex: 1;
	color: #09f;
	border-radius: 0;
	background-color: white;
}

.body-btns .btn:active {
	background-color: #ddd;
}

.body-btns .btn:after {
	border: 1px solid #ccc;
	border-radius: 0;
}

.btn-cancel {
	color: black !important;
}