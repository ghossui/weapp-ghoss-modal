@import "themes/themes.wxss";
@import "animation/animation.wxss";
.gmodal-box{position:fixed;z-index:99997;display:flex;justify-content:center;align-items:center}
.gmodal-mask{position:absolute;z-index:99998;background-color:rgba(0,0,0,0)}
.gmodal-box,.gmodal-mask{top:0;left:0;width:100%;height:100%}
.gmodal-body{position:relative;z-index:99999;width:80%;max-height:80%;transition:all .5s}
.gmodal-body-header{font-size:38rpx;padding:20rpx 20rpx;border-bottom:1px solid #f5f5f5;overflow:hidden;white-space:nowrap;text-overflow:ellipsis}
.gmodal-body-content{padding:20rpx 20rpx;font-size:32rpx}
.gmodal-body-content.hide-header{padding:50rpx 30rpx;text-align:center}
.gmodal-body-content.hide-header .scroll{color:#000}
.gmodal-body-content .scroll{color:#666;max-height:65vh;position:relative}
.gmodal-body-btns{height:100%;display:flex;align-items:center;box-sizing:border-box;justify-content:space-between}
.gmodal-body-btns .btn{flex:1;color:#09f;border-radius:0;background-color:#fff;border-top:1px solid #ccc;border-right:1px solid #ccc}
.gmodal-body-btns .btn:last-child{border-right:0}
.gmodal-body-btns .btn:active{background-color:#ddd}
.gmodal-body-btns .btn:after{border:0;border-radius:0}
.gmodal-body-btns .btn-cancel{color:#000}
.gmodal-body-content .input,.gmodal-body-content .textarea{width:100%;background-color:#fff;box-sizing:border-box;font-size:32rpx;color:#333;transition:border .2s,background .2s}
.gmodal-body-content .input,.gmodal-body-content .textarea{border-bottom:1px solid #6495ed}
.gmodal-body-content .placeholder-class{font-size:32rpx;transition:color .2s}
.gmodal-body-content .textarea{min-height:128rpx;max-height:256rpx}
.gmodal-body-content .warning-empty-value .input,.gmodal-body-content .warning-empty-value .textarea{border-bottom-color:red!important}
.gmodal-body-content .warning-empty-value .placeholder-class{color:red!important}