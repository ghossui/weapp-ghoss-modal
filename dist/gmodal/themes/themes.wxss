.wx-android-theme .gmodal-body-header{border:none;font-size:36rpx;padding:40rpx 40rpx 10rpx}
.wx-android-theme .gmodal-body-content{font-size:30rpx;padding:20rpx 40rpx 10rpx}
.wx-android-theme .gmodal-body-content.hide-header{padding:40rpx;padding-bottom:10rpx;text-align:left}
.wx-android-theme .gmodal-body-content .scroll{max-height:55vh}
.wx-android-theme .gmodal-body-btns{justify-content:flex-end;padding:20rpx 40rpx 40rpx}
.wx-android-theme .gmodal-body-btns .btn{flex:none;margin:0;padding:0;width:100rpx;font-size:28rpx;line-height:60rpx}
.wx-android-theme .gmodal-body-btns .btn{border:none}
.wx-android-theme .gmodal-body-btns .btn:active{background-color:#eaeaea}
.wx-android-theme .gmodal-body-btns .btn-confirm{color:#43d925}
.wx-android-theme .gmodal-body-btns .btn-cancel{margin-right:10rpx}

.wx-ios-theme .gmodal-body-header{border:none;font-size:36rpx;padding:40rpx 40rpx 10rpx;text-align:center}
.wx-ios-theme .gmodal-body-content{font-size:30rpx;padding:20rpx 40rpx 10rpx;text-align:center}
.wx-ios-theme .gmodal-body-content .scroll{max-height:60vh}
.wx-ios-theme .gmodal-body-content input{text-align:left}
.wx-ios-theme .gmodal-body-content.hide-header{padding:50rpx;padding-bottom:10rpx}
.wx-ios-theme .gmodal-body-btns{padding-top:40rpx}
.wx-ios-theme .gmodal-body-btns .btn-confirm{color:#43d925}